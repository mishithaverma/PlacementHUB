<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drive Feedback"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Rating -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate the drive experience"
            android:layout_marginBottom="8dp"/>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginBottom="16dp"/>

        <!-- Role Communication -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Was the role clearly communicated?"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/role_communication_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/role_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/role_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>

        </RadioGroup>

        <!-- Issues Faced -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe any issues you faced"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/issues_faced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <!-- Suggestions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestions for future improvement"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <!-- Future Participation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Would you attend similar drives again?"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/future_participation_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/participation_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/participation_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>

        </RadioGroup>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"/>

    </LinearLayout>

</ScrollView> 