<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_l">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSV Format Requirements"
        android:textSize="@dimen/text_size_l"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="Your CSV file must include the following headers in the first row:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_s"
        android:background="#F0F0F0"
        android:fontFamily="monospace"
        android:padding="@dimen/spacing_s"
        android:text="sapId,fullName,email,password,branch,rollNumber,cgpa,gender,backlogs,batch" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="Field Requirements:" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:text="• sapId: Unique identifier (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• fullName: Student's full name (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• email: Valid email address (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• password: Initial password (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• branch: Engineering branch (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• rollNumber: Student roll number (required)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• cgpa: Current CGPA (numeric, optional)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• gender: 'Male', 'Female', or 'Other' (optional)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• backlogs: Number of backlogs (numeric, optional)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• batch: Graduation year (numeric, optional)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="Example:"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:background="#F0F0F0"
        android:fontFamily="monospace"
        android:padding="@dimen/spacing_s"
        android:text="sapId,fullName,email,password,branch,rollNumber,cgpa,gender,backlogs,batch\n500123456,John Doe,john.doe@example.com,pass123,CSE,CSE123,8.5,Male,0,2023" />

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="Close" />

</LinearLayout> 